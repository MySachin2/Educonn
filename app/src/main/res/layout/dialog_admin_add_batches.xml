<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.phacsin.student.customfonts.HelveticaEditText
            android:id="@+id/admin_batch_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=""
            android:gravity="center"
            android:textStyle="bold"
            android:hint="Batch"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:layout_margin="10dp"
            android:background="@drawable/admin_profile_edit_edit_text" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@color/grey_divider"
            android:layout_gravity="bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="15dp"
                android:layout_height="40dp">
                <com.phacsin.student.customfonts.HelveticaButton
                    android:id="@+id/btn_cancel_batch_adding"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="40sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/yellow"
                    android:background="@drawable/button_cancel_yellow"
                    android:text="Cancel"/>
                <com.phacsin.student.customfonts.HelveticaButton
                    android:id="@+id/btn_add_batch"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="40sp"
                    android:textColor="@color/dark_green"
                    android:background="@drawable/button_year_semester_submit"
                    android:text="Add"/>

            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.phacsin.student.customfonts.NiceFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/msg_count"
                    android:hint="Maximum 120 Characters"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:textColor="@color/grey" />
            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>