<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.phacsin.student.customfonts.HelveticaEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100sp"
            android:id="@+id/typed_name_staff"
            android:hint="Enter Name"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textSize="20sp"
            android:maxLength="120"
            android:textStyle="bold"
            android:textColor="@color/black_dark" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@color/grey_divider"
            android:layout_gravity="bottom"/>
        <com.phacsin.student.customfonts.HelveticaEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100sp"
            android:id="@+id/typed_email_id_staff"
            android:hint="Enter Email"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textSize="20sp"
            android:maxLength="120"
            android:textStyle="bold"
            android:textColor="@color/black_dark" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@color/grey_divider"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_margin="15dp"
                android:layout_height="40dp">
                <com.phacsin.student.customfonts.HelveticaButton
                    android:id="@+id/btn_cancel_staff_adding"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="40sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/yellow"
                    android:background="@drawable/button_cancel_yellow"
                    android:text="Cancel"/>
                <com.phacsin.student.customfonts.HelveticaButton
                    android:id="@+id/btn_add_staff"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="40sp"
                    android:textColor="@color/dark_green"
                    android:background="@drawable/button_year_semester_submit"
                    android:text="Add"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>