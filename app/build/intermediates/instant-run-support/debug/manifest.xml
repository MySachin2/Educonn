<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phacsin.student"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.phacsin.student.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.phacsin.student.permission.C2D_MESSAGE" />

    <application
        android:name="com.phacsin.student.StudentApp"
        android:allowBackup="true"
        android:icon="@drawable/student"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name="com.phacsin.student.LoginActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phacsin.student.Forgot_Password"
            android:theme="@style/MyMaterialTheme" />
        <!-- admin_phase_begins -->
        <activity
            android:name="com.phacsin.student.main.admin.AdminMainActivity"
            android:theme="@style/MyMaterialTheme" />
        <!-- Profile phase begin -->
        <activity
            android:name="com.phacsin.student.main.admin.Settings_Admin"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Add_Subject"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Help_Desk_Admin"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Profile_Admin_Edit"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Payment_Admin_Details"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Admin_Change_Password"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Admin_Batches"
            android:theme="@style/MyMaterialTheme" />
        <!-- Profile phase end -->
        <!-- Message Phase -->
        <activity
            android:name="com.phacsin.student.main.admin.Messages_Send_Admin"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Message_Admin"
            android:theme="@style/MyMaterialTheme" />
        <!-- LIST STAFF -->
        <activity
            android:name="com.phacsin.student.main.admin.ListStaff"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MyMaterialTheme" />
        <!-- LIST SUBJECTS -->
        <activity
            android:name="com.phacsin.student.main.admin.ListSubject"
            android:theme="@style/MyMaterialTheme" />
        <!-- LIST STUDENTS -->
        <activity
            android:name="com.phacsin.student.main.admin.ListStudents"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.admin.Download_Data"
            android:theme="@style/MyMaterialTheme" />
        <!-- admin_phase_end -->
        <!-- teacher_phase_begins -->
        <activity
            android:name="com.phacsin.student.main.Teacher.TakeAttendance"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.Teacher.InputMark"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.phacsin.student.main.Teacher.InputMarkList"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.Teacher.TeacherMainActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.MainActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.PieChart"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name="com.phacsin.student.main.Teacher.EditActivity"
            android:theme="@style/MyMaterialTheme" />

        <service android:name="com.phacsin.student.MyFirebaseMessagingService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.phacsin.student.MyInstanceIDListenerService" >
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementInstallReferrerReceiver"
            android:enabled="true"
            android:permission="android.permission.INSTALL_PACKAGES" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
 FirebaseMessagingService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.messaging.FirebaseMessagingService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.phacsin.student" />
            </intent-filter>
        </receiver>
        <!--
 Internal (not exported) receiver used by the app to start its own exported services
             without risk of being spoofed.
        -->
        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdInternalReceiver"
            android:exported="false" />
        <!--
 FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.phacsin.student.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.phacsin.student.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>