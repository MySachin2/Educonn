<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/admin_profile_bg" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/admin_profile_icon" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/green"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/edit_admin_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit" />
            

            <TextView
                android:id="@+id/admin_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Bineesh  P Babu"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_profile_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="UI/UX Designer"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_admin_profile_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                android:minHeight="70dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:id="@+id/admin_profile_department_id"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_700"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="Phacsin Devs" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_admin_profile_mailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                android:minHeight="70dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/admin_profile_email_id"
                        android:textColor="@color/grey_700"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="bineesh@phacsin.com" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_admin_profile_contactno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                android:minHeight="70dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/admin_profile_contact_id"
                        android:textColor="@color/grey_700"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="8590332334" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_admin_profile_last_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                android:minHeight="70dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_700"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:layout_marginRight="5sp"
                        android:text="Last Login :" />
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/admin_profile_last_login_id"
                        android:textColor="@color/grey_700"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="30/08/1995" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
                android:id="@+id/card_admin_profile_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                android:minHeight="70dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_dark"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="Change Password" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_admin_profile_payment_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                android:minHeight="70dp"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <com.phacsin.educonn_school.customfonts.NiceFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="Payment Details" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>