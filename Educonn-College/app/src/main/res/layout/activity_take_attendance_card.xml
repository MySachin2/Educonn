<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        android:minHeight="90sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <com.phacsin.student.customfonts.NiceFont
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/black_dark"
                    android:text="Register Number"
                    android:layout_weight="0.7"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/subject" />
                <!--  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/btn_add_staff_subject"
                      android:layout_gravity="right"
                      android:layout_marginRight="15dp"
                      android:src="@drawable/ic_add_staff"/>-->
                <CheckBox
                    android:id="@+id/checkbox_take_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"/>



                <!--   <ImageView
                       android:layout_width="30sp"
                       android:layout_height="30sp"
                       android:id="@+id/right_arrow"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="10sp"
                       android:src="@drawable/right_arrow"/>-->
            </LinearLayout>
        </LinearLayout>
        <!--  <com.phacsin.student.customfonts.NiceFont
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:layout_marginLeft="20sp"
              android:layout_marginBottom="5dp"
              android:id="@+id/textViewName"
              android:text="Staff Name"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_divider"
            android:layout_gravity="bottom"/>
    </android.support.v7.widget.CardView>
</LinearLayout>